public class Edge{

	private int weight;
	private Vertex fromVertex;
	private Vertex toVertex;
	private String action;
	
	public Edge(int weight, Vertex fromVertex, Vertex toVertex, String action){
		this.weight = weight;
		this.fromVertex = fromVertex;
		this.toVertex = toVertex;
		this.action = action;
	}

	public int getWeight(){
		return weight;
	}

	public Vertex fromVertex(){
		return fromVertex;
	}

	public Vertex toVertex(){
		return toVertex;
	}

	public String toString(){
		return "("+fromVertex.index()+","+toVertex.index()+")";
	}

	public String getAction(){
		return action;
	}

}