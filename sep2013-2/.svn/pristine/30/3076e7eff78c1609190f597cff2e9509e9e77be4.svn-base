	/**
	 * set the movement speed of the robot according to the Slider
	 */
	public void stateChanged(ChangeEvent e) {
		JSlider source = (JSlider)e.getSource();
		if (!source.getValueIsAdjusting()) {
			speed = (int)source.getValue();
			try {
				communication.setTravelSpeed(speed);
			} catch (IOException e1) {
				// TODO Auto-generated catch block
				e1.printStackTrace();
			} catch (Exception e1) {
				// TODO Auto-generated catch block
				e1.printStackTrace();
			}
		}
	}


	/**
	 * the event handler for all the buttons
	 * @param e to get the source of the event.
	 */

	public void actionPerformed(ActionEvent e){
		if ((e.getSource() == connect)){
			try {
				communication = controllerFSM.createPCComms();
				connected = communication.connect();
				if (connected){
					connectionInfoDisplay.setText("ON");
					connect.setEnabled(false);
					forward.setEnabled(true);
					backward.setEnabled(true);
					left.setEnabled(true);
					right.setEnabled(true);
					mark.setEnabled(true);
					disconnect.setEnabled(true);
					auto.setEnabled(true);
					returnBase.setEnabled(true);
					stop.setEnabled(true);
					this.repaint();
				}else{
					connectionInfoDisplay.setText("OFF");
				}
				System.out.println("Connection Status: "+ connected);

			} catch (NXTCommException e1) {
				// TODO Auto-generated catch block
				e1.printStackTrace();
			} catch (IOException e1) {
				// TODO Auto-generated catch block
				e1.printStackTrace();
			}
		}
		if ((e.getSource()==disconnect)){
			try {
				b1.cancel();
				b1.purge();
				d1.cancel();
				d1.purge();
				communication.disconnect();
				batteryLevelDisplay.setText(" ");
				distanceDisplay.setText("");

				connect.setEnabled(true);
				forward.setEnabled(false);
				backward.setEnabled(false);
				left.setEnabled(false);
				right.setEnabled(false);
				mark.setEnabled(false);
				disconnect.setEnabled(false);
				auto.setEnabled(false);
				returnBase.setEnabled(false);
				stop.setEnabled(false);
				this.repaint();
			} catch (IOException e1) {
				// TODO Auto-generated catch block
				e1.printStackTrace();
			}
			connectionInfoDisplay.setText("OFF");

		}

		if (e.getSource() == left){
			try {
				communication.turnLeft();
				int orientation = map.getRobot().getRobotOrientation();
				switch(orientation){
				case 0:
					map.getRobot().setRobotOrientation(90);
					break;
				case 90:
					map.getRobot().setRobotOrientation(180);
					break;
				case 180:
					map.getRobot().setRobotOrientation(270);
					break;
				case 270:
					map.getRobot().setRobotOrientation(0);
					break;
				}
			} catch (IOException e1) {
				// TODO Auto-generated catch block
				e1.printStackTrace();
			}
			drawMap.repaint();
		}
		if (e.getSource() == right){
			try {
				communication.turnRight();
				int orientation = map.getRobot().getRobotOrientation();
				switch(orientation){
				case 0:
					map.getRobot().setRobotOrientation(270);
					break;
				case 90:
					map.getRobot().setRobotOrientation(0);
					break;
				case 180:
					map.getRobot().setRobotOrientation(90);
					break;
				case 270:
					map.getRobot().setRobotOrientation(180);
					break;
				}
			} catch (IOException e1) {
				// TODO Auto-generated catch block
				e1.printStackTrace();
			}
			drawMap.repaint();
		}
		if (e.getSource() == stop){
			try {
				switch(state){
				case MANUAL:
					communication.emergencyStop();
				case AUTOMATIC:
					try{
						controllerFSM.stopPressed();
					}catch(InterruptedException ie){
						ie.printStackTrace();
					}
				}
			} catch (IOException e1) {
				// TODO Auto-generated catch block
				e1.printStackTrace();
			}
		}

		if (e.getSource() == mark){
			try {
				gc.markClosure();
			} catch (IOException e1) {
				// TODO Auto-generated catch block
				e1.printStackTrace();
			}
		}

		if (e.getSource() == auto){
			state = AUTOMATIC;
			controllerFSM.startAutomaticMapping();
			connect.setEnabled(false);
			forward.setEnabled(false);
			backward.setEnabled(false);
			left.setEnabled(false);
			right.setEnabled(false);
			mark.setEnabled(false);
			disconnect.setEnabled(false);
			auto.setEnabled(false);
			returnBase.setEnabled(false);
			stop.setEnabled(true);
		}
		if(e.getSource() == viewAI){
			if(AIViewIsOn){
				viewAI.setText("  AI View: OFF  ");
				viewAI.repaint();
				AIViewIsOn = false;
				drawMap.showAI(false);
				drawMap.repaint();
			}
			else{
				viewAI.setText("  AI View: ON   ");
				viewAI.repaint();
				AIViewIsOn = true;
				drawMap.showAI(true);
				drawMap.repaint();
			}
		}
	}

